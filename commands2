sysctl -w net.ipv4.ip_forward=1
# Define your ZeroTier interface (usually starts with 'zt')
ZT_IFACE=$(ip link | grep zt | awk -F: '{print $2}' | tr -d ' ')

# Allow forwarding and enable NAT
#iptables -A FORWARD -i eth0 -o $ZT_IFACE -j ACCEPT
#iptables -A FORWARD -i $ZT_IFACE -m state --state RELATED,ESTABLISHED -j ACCEPT
#iptables -t nat -A POSTROUTING -o $ZT_IFACE -j MASQUERADE

# 2. Allow traffic to flow from ZeroTier to the Internet (eth0)
iptables -A FORWARD -i $ZT_IFACE -o eth0 -j ACCEPT

# 3. Allow return traffic (Internet back to ZeroTier)
iptables -A FORWARD -i eth0 -o $ZT_IFACE -m state --state RELATED,ESTABLISHED -j ACCEPT

# 4. NAT the traffic leaving via your Hyper-V 'Physical' adapter
iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
