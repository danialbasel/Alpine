sysctl -w net.ipv4.ip_forward=1
# Define your ZeroTier interface (usually starts with 'zt')
ZT_IFACE=$(ip link | grep zt | awk -F: '{print $2}' | tr -d ' ')

# Allow forwarding and enable NAT
iptables -A FORWARD -i eth1 -o $ZT_IFACE -j ACCEPT
iptables -A FORWARD -i $ZT_IFACE -m state --state RELATED,ESTABLISHED -j ACCEPT
iptables -t nat -A POSTROUTING -o $ZT_IFACE -j MASQUERADE
